 <!-- Modal -->
<div class="modal fade mt-5" id="addCommentModal" tabindex="-1" role="dialog" aria-labelledby="socialShareBtnModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title pl-2" id="ShareTitleLabel">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <!-- form add comment -->
        <div class="container p-5">
          <h5 class="mb-4">New comment</h5>
          <hr class="mb-5">
          <div class="container-form">
            {{form(form)}}
          </div>
        </div>
        <!-- end form add comment -->
      </div>
    </div>
  </div>
</div>