{% extends 'layout.html.twig' %}

{% block title %} All posts {% endblock %}
{% block content %}

<div class="row">
  
  <div class="last-post col-lg-9 col-md-9">
    {% for post in allPosts %}
      <div class="card mb-3 ml-5 mr-5">
        <div class="card-header">
          <span class="row">
            <div class="left">
            {% if app.user %}
              <h6 class="ml-3"><a href="{{ path('app_userprofile', {id: post.user.id } ) }}">{{ post.user.firstname }} {{ post.user.name }}</a></h6>
            {% else %}
              <h6 class="ml-3">{{ post.user.firstname }} {{ post.user.name }}</h6>
            {% endif %}
              {% if post.updatedAt != NULL %}
                <p class="card-text ml-3"><small class="text-muted">Edited on {{ post.createdAt | format_datetime('medium', 'short') }}</small></p>
              {% else %}
                <p class="card-text ml-3"><small class="text-muted">Published on {{ post.createdAt | format_datetime('medium', 'short') }}</small></p>
              {% endif %}
            </div>
            <div class="nav-point ml-auto">
              .
            </div>
          </span>
        </div>
        {% if post.image != NULL %}
          <img src="{{ asset('images/posts/' ~ post.image) }}" class="card-img-top" alt="post-image" style="max-height:850px;width:auto;">
        {% endif %}
          <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            {% if app.user %}
              <p class="card-text">{{ post.content | slice(0, 100)}} <a href="{{ path('app_showpost', {id: post.id}) }}">...See more</a></p>
            {% else %}
              <p class="card-text">{{ post.content | slice(0, 100)}}"...</p>
            {% endif %}
            {# <div class="actions">
            {% if app.user.email == post.user.email %}
              <a href="{{ path("app_deletepost", {id: post.id}) }}" onclick=" return confirm('Do you really want to delete this post? ')">
                <i class="fas fa-trash-alt text-danger"></i>
              </a>
              <a href="{{ path('app_updatepost', {id: post.id}) }}">
                <i class="fas fa-edit text-info ml-2"></i>
              </a>
            {% endif %}
            </div> #}
          </div>
      </div>
    {% endfor %}   
  </div>

  {% if app.user %}
    <div class="filter menu-categories">
      <p>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
          Search by categories
        </a>
        {# <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Button with data-target
        </button> #}
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <ul class="list-group list-group-flush">
            {% for category in allCategories %}
              <li class="list-group-item"><a href="{{ path('app_category', {id: category.id })}}">{{ category.label }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="add-post mt-3 mb-3">
        <h6><a href="{{ path('app_createpost')}}" class="btn btn-primary"><i class="fas fa-plus"></i> Add a new post</a></h6>
      </div>
    </div>

    {% else %}
      <div class="col-lg-3">
        <p>Register now to get more from Creecolo :)</p>
      </div>
  {% endif %}
</div>

<a href="{{ path('app_showallposts') }}" style="float:right"><i class="fas fa-arrow-up go_top"></i> Back to top</a>

{% endblock %}