{% extends 'layout.html.twig' %}

{% block title %} All posts {% endblock %}
{% block content %}

<div class="row">
  <div class="last-post col-lg-9 col-md-9">
    {% for post in allPosts %}

      <div class="container mb-5">
        <div class="column">
          <div class="post-card hover">
            <div class="post-img">
              <div class="date">
                <div class="day">{{ post.createdAt | date('d') }} </div>
                <div class="month">{{ post.createdAt | date('M') }}</div>
              </div>
              {% if post.image != NULL %}
                <img src="{{ asset('images/posts/' ~ post.image) }}" class="card-img-top" alt="post-image" style="justify-content:center;">
              {% endif %}
            </div>
            <div class="post-content">
              {% for category in post.categories %}
                  <a href="{{ path('app_category', {id: category.id}) }}"><small class="category">{{ category }}</small></a>
              {% endfor %}
              <h5 class="title">{{ post.title }}</h5>
              {% if app.user %}
                <h6 class="sub_title">Published by <a href="{{ path('app_userprofile', {id: post.user.id } ) }}">{{ post.user.firstname }} {{ post.user.name }}</a></h6>
              {% else %}
                <h6 class="sub_title">{{ post.user.firstname }} {{ post.user.name }}</h6>
              {% endif %}
              {% if app.user %}
                <p class="description">{{ post.content | slice(0, 100)}} <a href="{{ path('app_showpost', {id: post.id}) }}">...See more</a></p>
              {% else %}
                <p class="description">{{ post.content | slice(0, 100)}}"...</p>
              {% endif %}
              <div class="post-meta">
                <span class="timestamp"><i class="fa fa-clock-o"></i>
                  {% if post.updatedAt != NULL %} 
                    <span class="post-meta">Edited on {{ post.createdAt | format_datetime('medium', 'short') }}</span>
                  {% else %}
                    <span class="post-meta">Published on {{ post.createdAt | format_datetime('medium', 'short') }}</span>
                  {% endif %}
                </span>
                <span class="comments"><i class="fa fa-comments"></i><a href=" {{ path('app_showpost', {id: post.id} ) }}"> {{ post.comments.count() }} comment(s)</a></span>
              </div>
            </div>
          </div>
        </div>
      </div>

