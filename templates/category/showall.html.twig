{% extends 'layout.html.twig' %}

{% block title %}All categories{% endblock %}

{% block content %}

  <div class="container mt-5 sticky-footer">
      <div class="row col-md-12 col-md-offset-2 custyle">
        <table class="table table-striped custab">
          <thead>
          <a href="{{ path('app_createcategory') }}" class="btn btn-primary btn-xs pull-right mb-5"><b>+</b>Ajouter une nouvelle catégorie</a>
              <tr>
                  <th>ID</th>
                  <th>Label</th>
                  <th class="text-center">Action</th>
              </tr>
          </thead>
          {% for category in allCategories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.label }}</td>
                    <td class="text-center">
                      <a class='btn btn-primary btn-xs' href="{{ path('app_updatecategory', {id: category.id}) }}">Editer</a> 
                      <a href="{{ path('app_deletecategory', {id: category.id}) }}" class="btn btn-danger btn-xs" onclick="return confirm('Es-tu sûr de vouloir supprimer cette catégorie?')">Supprimer</a>
                    </td>
                </tr>
          {% endfor %}
        </table>
      </div>
  </div>

{% endblock %}